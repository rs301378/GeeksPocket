<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/root_relative_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="geekspocket.farziengineers.com.LoginSignUp"
    android:background="#fff"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="G E E K S  P O C K E T"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textColor="@color/cardview_dark_background"
            />
    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:lottie_fileName="data.json"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        android:layout_centerInParent="true"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/text_rider_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:text="Programming at your doorstep"
        android:textSize="12sp"
        android:textAlignment="center"
        android:textColor="@color/bottomText"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_above="@id/text_rider_app"
        android:layout_margin="16dp"
        >
        <Button
            android:id="@+id/signInButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/sign_in_button_background"
            tools:ignore="Suspicious0dp"
            android:text="SIGN IN"
            android:layout_marginRight="6dp"
            android:textColor="#FFFFFF"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/registerButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/register_button_background"
            tools:ignore="Suspicious0dp"
            android:text="REGISTER"
            android:layout_marginLeft="6dp"
            android:textColor="@color/registerButtonColor"
            android:layout_weight="1"
            />
    </LinearLayout>
</RelativeLayout>